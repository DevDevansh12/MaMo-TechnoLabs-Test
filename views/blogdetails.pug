extends layout

block content

  // JSON-LD Schema for Article
  script(type="application/ld+json").
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "#{blog.title}",
      "description": "#{blog.metaDescription || ''}",
      "image": "#{blog.bannerImage ? (blog.bannerImage.startsWith('http') ? blog.bannerImage : 'http://localhost:3001' + blog.bannerImage) : ''}",
      "author": {
        "@type": "Organization",
        "name": "#{blog.author || 'MaMo TechnoLabs'}",
        "url": "http://localhost:3001"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{blog.publisher ? blog.publisher.name : 'MaMo TechnoLabs'}",
        "logo": {
          "@type": "ImageObject",
          "url": "http://localhost:3001#{blog.publisher && blog.publisher.logo ? blog.publisher.logo : '/images/logo.png'}"
        }
      },
      "datePublished": "#{blog.createdAt.toISOString()}",
      "dateModified": "#{blog.updatedAt ? blog.updatedAt.toISOString() : blog.createdAt.toISOString()}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "#{blog.canonicalUrl || ''}"
      },
      "keywords": "#{blog.focusKeywords ? blog.focusKeywords.join(', ') : ''}"
    }

  // Page Banner
  .blog-banner-section
    .container
      .banner-content
        h1.blog-title= blog.title
        .breadcrumb-nav
          a(href='/') Home
          span.separator /
          a(href='/blog') Blog
          span.separator /
          span.current Article

  // Blog Content Section
  .blog-content-section
    .container
      .blog-wrapper
        
        if blog.bannerImage
          .blog-featured-image
            img(src=blog.bannerImage alt=blog.title)

        .blog-meta
          span.blog-date
            i.fa-regular.fa-calendar-days
            = ' ' + new Date(blog.createdAt).toDateString()

        if blog.metaDescription
          .blog-excerpt= blog.metaDescription

        .blog-body
          != blog.content



        // Follow Us Section
        .blog-follow
          h4 Follow MaMo Technolabs
          .follow-buttons
            a.follow-btn.facebook(href="https://www.facebook.com/p/MaMo-Technolabs-LLP-61551035098279/" target="_blank" rel="noopener nofollow")
              | Facebook
            a.follow-btn.linkedin(href="https://www.linkedin.com/company/mamotechnolabs/posts/?feedView=all" target="_blank" rel="noopener nofollow")
              | LinkedIn
            a.follow-btn.instagram(href="https://www.instagram.com/mamotechnolabs" target="_blank" rel="noopener nofollow")
              | Instagram

  style.
    .blog-banner-section {
      background: linear-gradient(90deg, hsla(178, 100%, 79%, 0.5) 0%, hsla(122, 100%, 88%, 0.5) 100%);
      padding: 60px 0;
      //- margin-top: 60px;
      width: 100%;
    }
    .blog-banner-section .container {
      max-width: 1140px;
      margin: 0 auto;
      padding: 0 15px;
    }
    .banner-content {
      text-align: center;
    }
    .blog-title {
      font-size: 2.5rem;
      line-height: 1.3;
      margin: 0 0 20px 0;
      color: #333;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    .breadcrumb-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
      font-size: 0.95rem;
    }
    .breadcrumb-nav a {
      color: #666;
      text-decoration: none;
    }
    .breadcrumb-nav a:hover {
      color: #4CAF50;
    }
    .breadcrumb-nav .separator {
      color: #999;
    }
    .breadcrumb-nav .current {
      color: #333;
      font-weight: 600;
    }
    .blog-content-section {
      padding: 60px 0;
      width: 100%;
    }
    .blog-content-section .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 15px;
    }
    .blog-wrapper {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 20px rgba(0,0,0,0.08);
    }
    .blog-featured-image {
      width: 100%;
      max-height: 500px;
      overflow: hidden;
      background: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .blog-featured-image img {
      width: 100%;
      height: 100%;
      max-height: 500px;
      object-fit: contain;
      display: block;
    }
    .blog-meta {
      padding: 30px 40px 0;
      color: #999;
      font-size: 0.95rem;
    }
    .blog-date i {
      margin-right: 5px;
    }
    .blog-excerpt {
      padding: 20px 40px;
      background: #f8f9fa;
      border-left: 4px solid #4CAF50;
      margin: 20px 40px;
      font-size: 1.1rem;
      line-height: 1.6;
      color: #555;
      font-weight: 500;
    }
    .blog-body {
      padding: 30px 40px;
      line-height: 1.8;
      color: #444;
      font-size: 1.05rem;
    }
    .blog-body h1 {
      font-size: 2rem;
      margin-top: 40px;
      margin-bottom: 20px;
      color: #333;
      font-weight: 700;
      line-height: 1.3;
    }
    .blog-body h2 {
      font-size: 1.75rem;
      margin-top: 35px;
      margin-bottom: 18px;
      color: #333;
      font-weight: 600;
      line-height: 1.3;
    }
    .blog-body h3 {
      font-size: 1.5rem;
      margin-top: 30px;
      margin-bottom: 15px;
      color: #333;
      font-weight: 600;
      line-height: 1.4;
    }
    .blog-body h4 {
      font-size: 1.25rem;
      margin-top: 25px;
      margin-bottom: 12px;
      color: #444;
      font-weight: 600;
      line-height: 1.4;
    }
    .blog-body h5 {
      font-size: 1.1rem;
      margin-top: 20px;
      margin-bottom: 10px;
      color: #444;
      font-weight: 600;
      line-height: 1.4;
    }
    .blog-body h6 {
      font-size: 1rem;
      margin-top: 20px;
      margin-bottom: 10px;
      color: #555;
      font-weight: 600;
      line-height: 1.4;
    }
    .blog-body p {
      margin-bottom: 20px;
    }
    .blog-body img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 20px 0;
    }
    .blog-body ul, .blog-body ol {
      margin: 20px 0;
      padding-left: 30px;
    }
    .blog-body li {
      margin-bottom: 10px;
    }
    .blog-body a {
      color: #4CAF50;
      text-decoration: underline;
    }
    .blog-body blockquote {
      border-left: 4px solid #4CAF50;
      padding-left: 20px;
      margin: 20px 0;
      font-style: italic;
      color: #666;
    }
    .blog-body code {
      background: #f4f4f4;
      padding: 2px 6px;
      border-radius: 3px;
      font-family: monospace;
    }
    .blog-body pre {
      background: #f4f4f4;
      padding: 15px;
      border-radius: 5px;
      overflow-x: auto;
    }
    .blog-share {
      padding: 30px 40px 20px;
      border-top: 2px solid #f0f0f0;
    }
    .blog-share h4 {
      margin: 0 0 15px 0;
      font-size: 1.1rem;
      color: #333;
    }
    .share-buttons {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .share-btn {
      padding: 10px 20px;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 0.9rem;
      font-weight: 500;
      transition: opacity 0.3s;
    }
    .share-btn:hover {
      opacity: 0.9;
    }
    .share-btn.twitter {
      background: #1DA1F2;
    }
    .share-btn.facebook {
      background: #4267B2;
    }
    .share-btn.linkedin {
      background: #0077B5;
    }
    .blog-follow {
      padding: 20px 40px 40px;
    }
    .blog-follow h4 {
      margin: 0 0 15px 0;
      font-size: 1.1rem;
      color: #333;
    }
    .follow-buttons {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .follow-btn {
      padding: 10px 20px;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 0.9rem;
      font-weight: 500;
      transition: transform 0.3s, box-shadow 0.3s;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .follow-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }
    .follow-btn.facebook {
      background: #4267B2;
    }
    .follow-btn.linkedin {
      background: #0077B5;
    }
    .follow-btn.instagram {
      background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    }
    
    @media (max-width: 768px) {
      .blog-title {
        font-size: 1.8rem;
      }
      .blog-meta,
      .blog-excerpt,
      .blog-body,
      .blog-share,
      .blog-follow {
        padding-left: 25px;
        padding-right: 25px;
      }
      .blog-excerpt {
        margin-left: 25px;
        margin-right: 25px;
      }
      .blog-body {
        font-size: 1rem;
      }
      .blog-body h1 {
        font-size: 1.6rem;
      }
      .blog-body h2 {
        font-size: 1.4rem;
      }
      .blog-body h3 {
        font-size: 1.25rem;
      }
      .blog-body h4 {
        font-size: 1.1rem;
      }
      .blog-body h5, .blog-body h6 {
        font-size: 1rem;
      }
      .share-buttons,
      .follow-buttons {
        flex-direction: column;
      }
      .share-btn,
      .follow-btn {
        text-align: center;
      }
    }
    
    @media (max-width: 576px) {
      .blog-banner-section {
        padding: 40px 0;
      }
      .blog-title {
        font-size: 1.5rem;
      }
      .blog-meta,
      .blog-excerpt,
      .blog-body,
      .blog-share,
      .blog-follow {
        padding-left: 20px;
        padding-right: 20px;
      }
      .blog-excerpt {
        margin-left: 20px;
        margin-right: 20px;
      }
      .blog-body h1 {
        font-size: 1.4rem;
      }
      .blog-body h2 {
        font-size: 1.25rem;
      }
      .blog-body h3 {
        font-size: 1.15rem;
      }
      .blog-body h4, .blog-body h5, .blog-body h6 {
        font-size: 1rem;
      }
    }
