extends layout

block content

  .blog-banner-section
    .container
      .banner-content
        h1.page-title Blog
        .breadcrumb-nav
          a(href='/') Home
          span.separator /
          span.current Blog

  .blog-listing-section
    .container
      .blog-grid
        if !blogs || blogs.length === 0
          .no-blogs
            h4 No blogs published yet.
        else
          each blog in blogs
            .blog-card
              .blog-card-image
                a(href=`/blog/${blog.slug}`)
                  img(src=blog.bannerImage || '/images/blog-page.png' alt=blog.title)
              .blog-card-content
                .blog-card-date= new Date(blog.createdAt).toDateString()
                h3.blog-card-title
                  a(href=`/blog/${blog.slug}`)= blog.title
                if blog.metaDescription
                  - var description = blog.metaDescription.length > 150 ? blog.metaDescription.substring(0, 150) + '...' : blog.metaDescription
                  p.blog-card-excerpt= description
                a.blog-card-link(href=`/blog/${blog.slug}`) Read More â†’

  style.
    .blog-banner-section {
      background: linear-gradient(90deg, hsla(178, 100%, 79%, 0.9) 0%, hsla(122, 100%, 88%, 0.9) 100%);
      padding: 60px 0;
      width: 100%;
    }
    .blog-banner-section .container {
      max-width: 1140px;
      margin: 0 auto;
      padding: 0 15px;
    }
    .banner-content {
      text-align: center;
    }
    .page-title {
      font-size: 2.5rem;
      margin: 0 0 20px 0;
      color: #333;
      font-weight: 700;
    }
    .breadcrumb-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
      font-size: 0.95rem;
      margin-bottom: 20px;
    }
    .breadcrumb-nav a {
      color: #666;
      text-decoration: none;
    }
    .breadcrumb-nav a:hover {
      color: #4CAF50;
    }
    .breadcrumb-nav .separator {
      color: #999;
    }
    .breadcrumb-nav .current {
      color: #333;
      font-weight: 600;
    }
    .banner-description {
      text-align: center;
    }
    .banner-description p {
      margin: 0;
      color: #666;
      font-size: 1.1rem;
    }
    .blog-listing-section {
      padding: 80px 0;
      width: 100%;
    }
    .blog-listing-section .container {
      max-width: 1140px;
      margin: 0 auto;
      padding: 0 15px;
    }
    .blog-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
    .no-blogs {
      grid-column: 1 / -1;
      text-align: center;
      padding: 60px 0;
    }
    .no-blogs h4 {
      color: #999;
      font-size: 1.2rem;
    }
    .blog-card {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 15px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    .blog-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 25px rgba(0,0,0,0.15);
    }
    .blog-card-image {
      width: 100%;
      height: 250px;
      overflow: hidden;
      background: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .blog-card-image a {
      display: block;
      width: 100%;
      height: 100%;
    }
    .blog-card-image img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
    }
    .blog-card:hover .blog-card-image img {
      transform: scale(1.02);
    }
    .blog-card-content {
      padding: 25px;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }
    .blog-card-date {
      color: #999;
      font-size: 0.9rem;
      margin-bottom: 15px;
    }
    .blog-card-title {
      margin: 0 0 15px 0;
      font-size: 1.3rem;
      line-height: 1.4;
      font-weight: 600;
    }
    .blog-card-title a {
      color: #333;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    .blog-card-title a:hover {
      color: #4CAF50;
    }
    .blog-card-excerpt {
      color: #666;
      line-height: 1.6;
      margin: 0 0 20px 0;
      flex-grow: 1;
    }
    .blog-card-link {
      color: #4CAF50;
      font-weight: 600;
      text-decoration: none;
      display: inline-block;
      margin-top: auto;
    }
    .blog-card-link:hover {
      text-decoration: underline;
    }
    
    @media (max-width: 992px) {
      .blog-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 768px) {
      .page-title {
        font-size: 2rem;
      }
      .blog-listing-section {
        padding: 40px 0;
      }
      .blog-card-title {
        font-size: 1.2rem;
      }
    }
    
    @media (max-width: 576px) {
      .blog-banner-section {
        padding: 40px 0;
      }
      .page-title {
        font-size: 1.75rem;
      }
      .blog-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
      .blog-card-title {
        font-size: 1.15rem;
      }
    }
